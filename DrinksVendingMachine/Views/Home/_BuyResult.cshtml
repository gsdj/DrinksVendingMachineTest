@using DrinksVendingMachine.Models.ViewModels;
@model BuyDrinkResult;

<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Ваш напиток</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="card mb-2">
                    <div class="card-header">@Model.Drink.Name</div>
                    <div class="card-body">
                        <img src="@Model.Drink.ImageUrl" class="rounded img-fluid" alt="Cinque Terre">
                        <h6 class="card-text m-0">@Model.Drink.Description</h6>
                        <h6 class="card-text m-0">Объем - @Model.Drink.Volume л</h6>
                    </div>
                </div>
                <table class="table table-sm">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="3" class="text-center">Сдача</th>
                        </tr>
                        <tr>
                            <th>Монета</th>
                            <th>Кол-во</th>
                            <th>Сумма</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Coins)
                        {
                            <tr>
                                <td>@item.CoinDen</td>
                                <td>@item.CoinCount</td>
                                <td>@item.CoinSum</td>
                            </tr>
                        }
                    </tbody>
                    <thead class="thead-light">
                        <tr>
                            <th colspan="2" class="text-right">Итого:</th>
                            <th>@Model.Coins.Sum(p => p.CoinSum)</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>